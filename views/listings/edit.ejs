<% layout("/listings/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form
        method="POST"
        action="/listings/<%=listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <h1>Edit your Listing</h1>
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            name="listing[title]"
            class="form-control"
            value="<%=listing.title %>"
            type="text"
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea name="listing[description]" class="form-control" required>
            <%= listing.description%></textarea
          >
          <div class="invalid-feedback">please enter a short description</div>
        </div>
        <div class="mb-3">
          <img src="<%=originalImageUrl %>" alt="image" />
        </div>
        <div class="mb-3">
          <label for="image" class="form-lable">Upload new Image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input
              type="number"
              class="form-control"
              name="listing[price]"
              value="<%=listing.price %>"
            />
            <div class="invalid-feedback">please enter valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">country</label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              value="<%=listing.country %>"
            />
            <div class="invalid-feedback">please enter valid country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-lable">location</label>
          <input
            type="text"
            class="form-control"
            name="listing[location]"
            value="<%=listing.location %>"
          />
          <div class="invalid-feedback">please enter valid location</div>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-control">
            <option value="trending" <%= listing.category === "trending" ? 'selected="selected"' : "" %>>Trending</option>
            <option value="rooms" <%= listing.category === "rooms" ? 'selected="selected"' : "" %>>Rooms</option>
            <option value="iconicCities" <%= listing.category === "iconicCities" ? 'selected="selected"' : "" %>>Iconic Cities</option>
            <option value="mountains" <%= listing.category === "mountains" ? 'selected="selected"' : "" %>>Mountains</option>
            <option value="boats" <%= listing.category === "boats" ? 'selected="selected"' : "" %>>Boats</option>
            <option value="amazingPools" <%= listing.category === "amazingPools" ? 'selected="selected"' : "" %>>Amazing Pools</option>
            <option value="arctic" <%= listing.category === "arctic" ? 'selected="selected"' : "" %>>Arctic</option>
            <option value="farms" <%= listing.category === "farms" ? 'selected="selected"' : "" %>>Farms</option>
            <option value="camping" <%= listing.category === "camping" ? 'selected="selected"' : "" %>>Camping</option>
          </select>
          <div class="invalid-feedback">Please select the Category</div>
        </div>


        <button class="btn btn-dark edit-btn mt-2">EDIT</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
