<% layout("/listings/layouts/boilerplate.ejs") %>

<style>
  .nav2 {
    height: 6rem;
  }
  .navbar-nav {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    opacity: 0.7;
    justify-content: center;
    align-items: center;
    margin-right: 1.5rem;
    font-size: 0.8rem;
  }
  .filter:hover {
    cursor: pointer;
    opacity: 1;
    text-decoration: underline;
  }
  .navbar-collapse {
    z-index: 1;
    background-color: white;
  }
  .taxinfo {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 15px;
    height: 2.5rem;
    padding: 13px;
    margin-left: 1rem;
    display: flex;
    align-items: center;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary nav2">
  <div class="container-fluid">
    <a class="nav-link filter" href="/listings/trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <span>Trending</span>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup1"
      aria-controls="navbarNavAltMarkup1"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup1">
      <div class="navbar-nav">
        <a class="nav-link filter" href="/listings/rooms">
          <div><i class="fa-solid fa-bed"></i></div>
          <span>Rooms</span>
        </a>

        <a class="nav-link filter" href="/listings/iconicCities">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <span>Iconic Cities</span>
        </a>

        <a class="nav-link filter" href="/listings/mountains">
          <div><i class="fa-solid fa-mountain"></i></div>
          <span>Mountains</span>
        </a>

        <a class="nav-link filter" href="/listings/domes">
          <div><i class="fa-solid fa-landmark-dome"></i></div>
          <span>Domes</span>
        </a>

        <a class="nav-link filter" href="/listings/boats">
          <div><i class="fa-solid fa-ferry"></i></div>
          <span>Boats</span>
        </a>

        <a class="nav-link filter" href="/listings/amazingPools">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <span>Amazing Pools</span>
        </a>

        <a class="nav-link filter" href="/listings/arctic">
          <div><i class="fa-solid fa-snowman"></i></div>
          <span>Arctic</span>
        </a>

        <a class="nav-link filter" href="/listings/farms">
          <div><i class="fa-solid fa-cow"></i></div>
          <span>Farms</span>
        </a>

        <a class="nav-link filter" href="/listings/camping">
          <div><i class="fa-solid fa-campground"></i></div>
          <span>Camping</span>
        </a>

        <!-- Switch at the end -->
        <div class="tax-toggle">
          <div class="form-check form-switch ms-3">
            <input
              class="form-check-input"
              type="checkbox"
              role="switch"
              id="switchCheckDefault"
            />
            <label class="form-check-label" for="switchCheckDefault">
              Show Tax
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<br />

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let list of allListing) { %>
    <a href="/listings/<%= list._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= list.image.url %>"
          class="card-img-top"
          style="height: 20rem"
          alt="listing image"
        />
        <div class="card-img-overlay">you want to click !!!!</div>
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b>
            <br />
            &#8377 <%= list.price.toLocaleString("en-IN") %> /night
            <i class="taxinfo">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  // Toggle GST info visibility
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxinfo = document.getElementsByClassName("taxinfo");
    for (let info of taxinfo) {
      if (info.style.display !== "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });

  // Optional: Collapse navbar after clicking a filter link (mobile fix)
  document.querySelectorAll(".filter").forEach(link => {
    link.addEventListener("click", () => {
      const navbarCollapse = document.getElementById("navbarNavAltMarkup1");
      const bsCollapse = new bootstrap.Collapse(navbarCollapse, { toggle: false });
      bsCollapse.hide();
    });
  });
</script>
