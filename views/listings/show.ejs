<% layout("/listings/layouts/boilerplate.ejs") %>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  // eslint-disable-next-line
  const listing = <%-JSON.stringify(listing)%>;
</script>

<div>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <b><%= listing.title %></b>
    </div>

    <div class="card listing-card col-4 mt-2 offset-3 show-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing Image"
      />
      <div class="card-body">
        <p class="card-text">
          <i>Owned By : <%= listing.owner.username %></i>
        </p>

        <p class="card-text"><%= listing.description %></p>

        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
        <p class="card-text"><%= listing.category %></p>

        <!-- ACTION BUTTONS -->
        <div class="action-buttons">
          <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
            <a href="/listings/<%= listing._id %>/edit" class="btn-edit">EDIT</a>

            <form
              method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE"
              class="d-inline"
            >
              <button type="submit" class="btn-delete">DELETE</button>
            </form>

            <a href="/listings/<%= listing._id %>/book" class="btn-booknow">
              Book Now
            </a>
          <% } else if (currUser) { %>
            <a href="/listings/<%= listing._id %>/book" class="btn-booknow">
              Book Now
            </a>
          <% } else { %>
            <a
              href="/listings/<%= listing._id %>/book"
              class="btn btn-primary btn-booknow"
            >
              Login to Book
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- RATING SECTION -->
  <hr class="col-10 offset-2" />
  <div class="col-8 offset-3">
    <% if (currUser) { %>
      <h3>Give your rating :</h3>

      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mt-3">
          <label class="form-label" for="first-rate1">Rating</label>

          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label class="form-label" for="comment">Give your comment here</label>
          <textarea name="review[comment]" id="comment" class="form-control"></textarea>
          <div class="invalid-feedback">please submit some feedback</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
    <% } %>

    <% if (listing.reviews.length > 0) { %>
      <div class="row">
        <h4>All reviews :</h4>
        <% for (review of listing.reviews) { %>
          <div class="card col-5 mb-3 ms-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.author.username %></h5>
              <p
                class="starability-result card-text mb-3"
                data-rating="<%= review.rating %>"
              ></p>
              <p class="card-text"><i><%= review.comment %></i></p>
            </div>

            <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
              <form
                class="mb-3 mt-3"
                method="POST"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              >
                <button class="btn btn-dark">Delete</button>
              </form>
            <% } %>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map" class="map"></div>
  </div>
</div>

<!-- MAP SCRIPT -->
<script src="/js/map.js"></script>

<!-- STYLES -->
<style>
.action-buttons {
  display: flex;
  justify-content: center; /* centers buttons horizontally */
  align-items: center;
  gap: 1rem;
  margin-top: 1.2rem;
  flex-wrap: wrap;
}

.btn-edit,
.btn-delete,
.btn-booknow {
  padding: 0.5rem 1.3rem;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
}

.btn-edit {
  background-color: #007bff;
  color: white;
}
.btn-edit:hover {
  background-color: #0056b3;
}

.btn-delete {
  background-color: #dc3545;
  color: white;
  border: none;
}
.btn-delete:hover {
  background-color: #b02a37;
}

.btn-booknow {
  background-color: #28a745;
  color: white;
  border: none;
}
.btn-booknow:hover {
  background-color: #1e7e34;
}
</style>
